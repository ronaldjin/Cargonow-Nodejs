.card(class="pb")
    div.p.bgc-grey-100
        span.display-block.fs-subhead.tc-red-800.sv-color-7(style='font-weight:600') {{topNews.topic|uppercase}}
    md-divider
    div(layout='row' layout-align='center')
        a(ui-sref='app.article({id:topNews.fbkey})' )
            .card__img.card__img--top(style='padding:0px !important')
                sv-img-framed(sv-img = 'topNews.img' max-width='800' max-height='320')
                span.mdc-display-inline-block.fs-title.tc-white.bgc-white.sv-color-8(style='padding:4px 8px;margin: 0px -15px')
                    | {{topNews.title}}
                span.mdc-display-inline-block.fs-title.tc-white.bgc-red-800.sv-color-7(style='padding:4px 8px;margin: 0px -15px')
                    | {{topNews.title}}
    .p
        //a.article-thumb-link.tc-grey-800(ui-sref='app.article({id:topNews.fbkey})' )
        //    .fs-title.tc-black-1(ng-bind-html='safeParsing(topNews.title)')
        span.fs-body-1.display-block.tc-grey-500 {{isFirst? 'Alexander Etman':topNews.author}}
        div.article-body
            p(ng-bind-html="safeParsing(topNews.summary||(topNews.body|cut:50))")
    div(layout='row' layout-align='end center' class='pr'  hide-gt-md="")
        sv-read-more(route-name="app.article" sv-params="topNews.fbkey")
