.card(class='mb+')
    div.bgc-grey-200(layout='row' layout-align='space-between' )
        div
            span.m.mdc-display-inline-block.fs-caption.tc-grey-700.bgc-red-100(style='padding:0px 4px;font-weight:500;float:left') # {{index}}
            sv-svet-label.mr.mt.mb(section-title="{{article.section}}" route-name='app.section' params='{sectionName:article.section}' cursor-type='pointer' bgc="bgc-grey-200" tc="tc-grey-600")
            span.mdc-display-inline-block.mt.mb.fs-caption.tc-grey-500 {{article.timestamp|date}}
        div.ml.mr.mb(layout="row" ng-show='isRank' flex="30" layout-align='end')
            sv-article-make-top-btn(article='article' index='index')
        sv-article-status(article='article' key='article.$id' property='isPublic')
    div(layout-gt-sm='row' layout-sm='column' layout-align-gt-sm="space-between center" layout-align-sm="start")
        div.p
            a.tc-grey-700(ui-sref='app.article({id:article.$id})' style='text-decoration:none;font-weight:bold')
                span.display-block(ng-bind-html='article.title' id="authorArticleLinkTitle")
                span.display-block.fs-body-1.tc-black-2(ng-bind-html='article.summary|length:80')
            span.fs-caption Author: &nbsp
            span.fs-caption.tc-grey-500(ng-bind-html='article.author|authorNameFr')
        div.ml.mr.mb(layout="row" ng-hide='isRank' flex="30" layout-align='end')
            sv-edit-article-btn.mr(article='article')
            sv-delete-article-btn.mr(article-key='{{article.fbkey}}')
