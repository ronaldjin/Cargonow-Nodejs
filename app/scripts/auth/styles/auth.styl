@import 'nib'

.sv-notifications-txt
  font-weight 500
  font-size 14px

.user-auth-name
  display inline-block
  cursor pointer
  text-decoration none
  color #393939

.sv-active-menu
  border-bottom thin red solid !important

.sv-active-user-menu
  background-color #E0E0E0 !important

.sv-active-notifications
  background-color red !important

.btn--grey
  &:hover
  &:active
  &:focus
    background-color #E0E0E0 !important

.sv-notifications-icon
  &:hover
  &:active
  &:focus
    background-color #E0E0E0 !important

.md-paginator
  z-index 99
  width 56px !important

md-icon
  fill #393939
  margin 0px


/**********************
  =lumx table
